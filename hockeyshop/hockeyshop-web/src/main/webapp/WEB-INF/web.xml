<?xml version="1.0" encoding="UTF-8"?>
<!--suppress ALL -->
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>UserAuthFilter</filter-name>
        <filter-class>com.fujitsu.fs.rnovikov.filters.UserAuthFilter</filter-class>
        <init-param>
            <param-name>allow-urls</param-name>
            <param-value>/home,/fonts,/login,/register,/css,/bootstrap,/images,/js,/tov,/admin,/product_detail,/edit_product</param-value>
        </init-param>
    </filter>


    <filter-mapping>
        <filter-name>UserAuthFilter</filter-name>
        <url-pattern>/addToCart/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>UserAuthFilter</filter-name>
        <url-pattern>/basket</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>UserAuthFilter</filter-name>
        <url-pattern>/deleteFromCart/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>UserAuthFilter</filter-name>
        <url-pattern>/edit_product/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>UserAuthFilter</filter-name>
        <url-pattern>/getproductsnext/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>UserAuthFilter</filter-name>
        <url-pattern>/home</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>UserAuthFilter</filter-name>
        <url-pattern>/login</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>UserAuthFilter</filter-name>
        <url-pattern>/product_detail/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>UserAuthFilter</filter-name>
        <url-pattern>/register</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>UserAuthFilter</filter-name>
        <url-pattern>/tov</url-pattern>
    </filter-mapping>


    <servlet>
        <servlet-name>freemarker</servlet-name>
        <servlet-class>freemarker.ext.servlet.FreemarkerServlet</servlet-class>
        <init-param>
            <param-name>TemplatePath</param-name>
            <param-value>/views</param-value>
        </init-param>
        <init-param>
            <param-name>default_encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>output_encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>ExceptionOnMissingTemplate</param-name>
            <param-value>true</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>freemarker</servlet-name>
        <url-pattern>*.ftl</url-pattern>
    </servlet-mapping>



</web-app>